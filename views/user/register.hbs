<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-info">
			<div class="panel-heading">
				<h4>REGISTRATION FORM</h4>
			</div>
			<div class="panel-body">
				<form method="POST" class="form form-vertical" action="/user/register" novalidate>
					<div class="form-group">
						<label for="first_name">First name : </label>
						<input name="first_name" class="form-control" placeholder="First Name" required value="{{input.first_name}}" />
						{{#if error.first_name.message}}
						<p class="text text-danger">{{error.first_name.message}}</p>
						{{/if}}
					</div>

					<div class="form-group">
						<label for="last_name">Last name : </label>
						<input name="last_name" class="form-control" placeholder="Last Name" required value="{{input.last_name}}" />
						{{#if error.last_name.message}}
						<p class="text text-danger">{{error.last_name.message}}</p>
						{{/if}}
					</div>

					<div class="form-group">
						<label for="email">Email : </label>
						<input type="email" name="email" class="form-control" placeholder="Email" required value="{{input.email}}" />
						{{#if error.email.message}}
						<p class="text text-danger">{{error.email.message}}</p>
						{{/if}}
					</div>
					<div class="form-group">
						<label for="password">Password :</label>
						<input name="password" type="password" class="form-control" placeholder="password" />
						{{#if error.password.message}}
						<p class="text text-danger">{{error.password.message}}</p>
						{{/if}}

					</div>
					<div class="form-group">
						<div class="row">
							<div class="col-md-4">
								<input type="submit" value="Create my account" class="btn btn-info btn-block" />					
							</div>
						</div>
						

					</div>
				</form>
			</div>
		</div>
				
	</div>
</div>